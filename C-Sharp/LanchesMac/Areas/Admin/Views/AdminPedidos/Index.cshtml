@model PaginacaoPedidosViewModel

@{
    ViewData["Title"] = Resource.DESCRITIVO_PEDIDO_PLURAL;
}

<h1>@Resource.DESCRITIVO_PEDIDO_PLURAL</h1>

<form method="get" class="form-inline">

    <input name="filter" class="form-control" placeholder="filtro"
           value="@ViewBag.filter" />

    <button type="submit" class="btn btn-primary">Procurar</button>
</form>

Total de Pedidos : @Model.QuantidadeRegistros
<div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">

            <li class="@((Model.PageNumber > 1)? "page-item" : "page-item disabled")"><a class="page-link" href="@Url.Action("Index", new { filter = ViewBag.filter, pageindex = Model.PageNumber - 1 })"> Anterior </a></li>  

            @for(int contador = 1; contador <= Model.TotalPages; contador++)
            {
                    <li class="@((contador == Model.PageNumber)? "page-item active" : "page-item")"><a class="page-link" href="@Url.Action("Index", new { filter = ViewBag.filter, pageindex = contador })">@contador</a></li> 
            }

           <li class="@((Model.PageNumber < Model.TotalPages)? "page-item" : "page-item disabled")"><a class="page-link" href="@Url.Action("Index", new { filter = ViewBag.filter, pageindex = Model.PageNumber + 1 })">Próxima</a></li>  

        </ul>
    </nav>
</div>

<p>
    <a asp-action="Create">@Resource.DESCRITIVO_CRIAR_NOVO</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.Endereco1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.Endereco2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.Cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.PedidoEnviado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.PedidoEntregueEm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Pedidos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoEnviado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PedidoId">@Resource.DESCRITIVO_EDITAR</a> |
                    <a asp-action="Details" asp-route-id="@item.PedidoId">@Resource.DESCRITIVO_DETALHES</a> |
                    <a asp-action="Delete" asp-route-id="@item.PedidoId">@Resource.DESCRITIVO_DELETAR</a> |
                    <a asp-action="PedidoLanches" asp-route-id="@item.PedidoId">Ver Lanches</a>
                </td>
            </tr>
        }
    </tbody>
</table>
