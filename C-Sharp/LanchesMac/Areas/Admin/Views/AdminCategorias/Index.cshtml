@model IEnumerable<LanchesMac.Models.Categoria>

@{
    ViewData["Title"] = Resource.DESCRITIVO_CATEGORIA_PLURAL;
}

<h1>@Resource.DESCRITIVO_CATEGORIA_PLURAL</h1>

<p>
    <a asp-action="Create">@Resource.DESCRITIVO_CRIAR_NOVO</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaId">@Resource.DESCRITIVO_EDITAR</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoriaId">@Resource.DESCRITIVO_DETALHES</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId">@Resource.DESCRITIVO_DELETAR</a>
            </td>
        </tr>
}
    </tbody>
</table>
