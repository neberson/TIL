@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h1>@ViewData["Title"]</h1>  

<P>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</P>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>  
            <th>
            </th>             
        </tr>
    </thead>
    <tbody>
        @foreach (var seller in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(item => seller.Name)
                </td>
                <td>
                    @Html.DisplayFor(item => seller.Email)
                </td>
                <td>
                    @Html.DisplayFor(item => seller.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(item => seller.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@seller.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@seller.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@seller.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

